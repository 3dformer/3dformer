#language-dd
  width: 30px
  height: 30px
  margin-left: 30px
  cursor: default
  div
    background: white
    width: 100%
    height: 100%
    line-height: 29px
    text-align: center
    border-radius: 5px
  ul
    display: none
    list-style: none
    background: white
    width: 140px
    position: relative
    left: -110px
    border-radius: 10px 0 10px 10px
    overflow: hidden
    li
      padding: 0 20px
      line-height: 40px
      border-bottom: 1px solid #EEE
      cursor: pointer
      &:hover
        background: orange
      &:last-child
        border: none
  &:hover
    div
      border-radius: 5px 5px 0 0
    ul
      display: block
